@model HotelBookingsWeb.Models.CustomerReservation
@{
    ViewData["Title"] = "Create Booking";
}
<h2>Create Booking</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Staff</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(x => x.Customer, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Customer, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Customer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Contact, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Contact, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.PropertyId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    var properties = ViewBag.Properties as List<HotelBookingsWeb.Model.Property>;
                    @Html.DropDownList("PropertyId",
                        properties.Select(m => new SelectListItem
                        {
                            Value = m.Id.ToString(),
                            Text = m.PropertyName
                        }),
                        new { @class = "form-control" })
                }
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.RoomId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
                    var rooms = ViewBag.Rooms as List<HotelBookingsWeb.Model.Room>;
                    @Html.DropDownList("RoomId",
                        rooms.Select(m => new SelectListItem
                        {
                        Value = m.Id.ToString(),
                        Text = m.Number
                        }),
                        new { @class = "form-control" })
                }
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.StartDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.EndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.TotalCharges, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.TotalCharges, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.TotalCharges, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CreateBooking" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Go to Reservation List", "AllReservations")
</div>
